
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Buy Tickets</h4>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-6 mt-4 bilet alma bilgileri">

                    <form style="width:55%" class="ml-4">

                        <div class="form-group" id="movieGroup">
                            <label for="exampleFormControlSelect0">Movie</label>
                            <select class="form-control" id="exampleFormControlSelect0">
                                <option value="Movie">Movie</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                            </select>
                        </div>

                        <div class="form-group" id="cityGroup">
                            <label for="exampleFormControlSelect1">City</label>
                            <select class="form-control" onchange="func2()" id="exampleFormControlSelect1">
                                <option value="City">City</option>
                                <option value="İstanbul">İstanbul</option>
                                <option value="Ankara">Ankara</option>
                                <option value="İzmir">İzmir</option>
                                <option value="Kocaeli">Kocaeli</option>
                            </select>
                        </div>

                        <div class="form-group" id="cinemaGroup">
                            <label for="exampleFormControlSelect2">Cinema</label>
                            <select class="form-control" id="exampleFormControlSelect2">
                                <option value="Cinema">Cinema</option>

                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                        </div>

                        <div class="form-group mt-1" id="calender">
                            @{
                                String[] splitedDay = System.DateTime.Today.ToString("d").Split(".");
                                String startdate = splitedDay[2] + "-" + splitedDay[1] + "-" + splitedDay[0];
                                int year = Convert.ToInt32(splitedDay[2]);
                                int month = Convert.ToInt32(splitedDay[1]) + 2;
                                int day = Convert.ToInt32(splitedDay[0]);
                                if (month > 12)
                                {
                                    month = month - 12;
                                    year += 1;
                                }
                                String month_str = "";
                                if (month < 10)
                                {
                                    month_str = "0" + month;
                                }
                                else month_str = "" + month;
                                int day_num = DateTime.DaysInMonth(year, month);
                                if (day > day_num)
                                {
                                    day = day_num;
                                }

                                String endDate = year + "-" + month_str + "-" + day;
                            }
                            <label for="start">Start date:</label>
                            <input type="date" id="start" name="trip-start"
                                   value="@startdate"
                                   min="@startdate" max="@endDate">
                        </div>

                        <div class="form-group" id="seansGroup">
                            <label for="exampleFormControlSelect3">Seans</label>
                            <select class="form-control" id="exampleFormControlSelect3">
                                <option value="Seans">Seans</option>

                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                        </div>

                    </form>

                </div>

                <div class="col-6 mt-4">

                    <div class="seats" style="height: 410px;">

                        <div class="p-1" align="center">The Scene</div>

                        @{
                            for (int seatLetter = 65; seatLetter <= 72; seatLetter++)
                            {

                                char seat = Convert.ToChar(seatLetter);

                                <div class="seat-order">

                                    <div class="seat-one">@seat</div>

                                    @for (var seatNo = 1; seatNo <= 15; seatNo++)
                                    {
                                        <span class="seat-one seat" onclick="activate(id)" id="@seat@seatNo">@seatNo</span>
                                    }

                                </div>
                            }
                        }

                    </div>

                </div>

                <div class="col-12 p-4" align="center">
                    <a asp-controller="Movie" asp-action="PaymentTicket">
                        <div class="btn btn-success">Continue</div>
                    </a>
                </div>
            </div>
        </div>
    </div>
